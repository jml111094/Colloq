\mode<presentation>

% Captions
\defbeamertemplate*{caption}{FHL}
{%
  \raggedright
  \insertcaption\par
}

% Grundeinheiten
\newlength{\unitwidth}
\newlength{\unitsep}
\setlength{\unitwidth}{0.64cm}
\setlength{\unitsep}{.3333\unitwidth}

% Ränder
\beamersetleftmargin{\unitwidth}
\beamersetrightmargin{\unitwidth}
\newlength{\fhgleftcolumn}
\setlength{\fhgleftcolumn}{.33\linewidth}
\newlength{\fhgrightcolumn}
\setlength{\fhgrightcolumn}{.66\linewidth}

% Frametitledefinition
\ifx\insertsection\tmp
  %\vspace{1.5ex}
  \useframetitletemplate{%
  \large\structure{\textbf{\insertframetitle}}
  \par
  {\normalsize\structure{\textbf{\insertframesubtitle}}
  \par}
  }
\else
  \useframetitletemplate{%
  	\vspace{1.5ex}
	\hspace{-2ex}
	\bf
      	\setbeamerfont{section in head/foot}{size=\Large}
      	{\usebeamerfont{section in head/foot}\usebeamercolor[black]{section in head/foot} \textcolor{white}{\arabic{section}.}\hspace{0.5em}\textcolor{fhlred}{\insertframetitle}}
  \par
  }
\fi  

% Neudefinition einer weiteren Frameumgebung, bei der der ganze Text um fhgleftcolumn eingerückt ist
\newcommand{\framefhgright}[1]{\frame{\hspace{\fhgleftcolumn}\begin{minipage}{\fhgrightcolumn}#1\end{minipage}}}

% Aufzählungs-Bobbel:
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[circle]
\setbeamercolor{itemize item}{fg=fhlred}
\setbeamercolor{itemize item dimmed}{fg=fhlred}
\setbeamercolor{enumerate item}{fg=fhlred}
\setbeamercolor{block title}{fg=black, bg=fhlred}
\setbeamercolor{section in toc}{fg=fhlred}
\setbeamercolor{caption name}{fg=fhlred}
\setbeamercolor{bibliography entry author}{fg=black}
